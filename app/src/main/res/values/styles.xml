<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">

    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/ds_radius_xmedium</item>
        <item name="cardElevation">@dimen/ds_card_elevation_medium</item>
        <item name="cardMaxElevation">@dimen/ds_card_elevation_medium</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
    </style>

    <style name="Widget.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Form.BaseTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">@dimen/global_size_height_xlarge</item>
        <item name="android:textSize">@dimen/ds_textsize_small_plus</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Form.TextView" parent="Widget.Form.BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/ds_textsize_small_plus</item>
        <item name="android:paddingStart">@dimen/ds_padding_xsmall</item>
    </style>

    <style name="Widget.Form.TextView.Success" parent="Widget.Form.BaseTextView">
        <item name="android:textColor">@color/success</item>
    </style>

    <style name="Widget.Form.TextView.Error" parent="Widget.Form.BaseTextView">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">@dimen/ds_textsize_mini</item>
    </style>

    <style name="Widget.Form.TextView.Warning" parent="Widget.Form.BaseTextView">
        <item name="android:textColor">@color/warning</item>
    </style>

    <style name="Widget.Form.EditText" parent="Widget.Form.BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/global_size_height_xxsmall_plus</item>
        <item name="android:background">@drawable/ic_shape_rectangle_light_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:paddingStart">@dimen/ds_padding_xsmall</item>
        <item name="android:paddingLeft">@dimen/ds_padding_xsmall</item>
        <item name="android:paddingEnd">@dimen/ds_padding_xsmall</item>
        <item name="android:paddingRight">@dimen/ds_padding_xsmall</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/ds_null</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/ds_textsize_small_plus</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">5dp</item>
        <item name="cornerRadius">@dimen/ds_radius_xxlarge</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="Widget.ButtonGray" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/ds_null</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ds_textsize_xxsmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">5dp</item>
        <item name="cornerRadius">@dimen/ds_radius_xxlarge</item>
        <item name="backgroundTint">@color/light_grey</item>
    </style>

    <style name="Widget.TextView.Title1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ds_textsize_small_plus</item>
        <item name="android:textColor">@color/green_light</item>
    </style>

    <style name="Widget.ButtonGreen" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ds_textsize_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">5dp</item>
        <item name="backgroundTint">@color/green_light</item>
    </style>

    <style name="NumericKeyboardButtonStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
