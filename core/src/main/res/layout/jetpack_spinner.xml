<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spJetpack"
            android:layout_width="@dimen/ds_size_0"
            android:layout_height="@dimen/ds_size_40"
            android:autofillHints="Tipo de documento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_shape_rectangle_light_gray"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="@dimen/ds_size_48"
            />

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_arrow_down_green"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>